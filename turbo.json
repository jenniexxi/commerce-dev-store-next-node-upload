{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["APP_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^assets", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^assets"],
      "cache": false,
      "persistent": true
    },
    "lint:styled": {
      "dependsOn": ["^lint:styled"]
    },
    "assets": {
      "dependsOn": ["^assets"]
    }
  }
}
